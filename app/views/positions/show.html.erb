<div>
  <div>
    <h1>
      Position #<%= @the_position.id %> details
    </h1>

    <div>
      <div>
        <a href="/positions">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_position/<%= @the_position.id %>">
          Delete position
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Board state
      </dt>
      <dd>
        <%= @the_position.board_state %>
      </dd>

      <dt>
        Best move
      </dt>
      <dd>
        <%= @the_position.best_move %>
      </dd>

      <dt>
        Evaluation
      </dt>
      <dd>
        <%= @the_position.evaluation %>
      </dd>

      <dt>
        Whose turn
      </dt>
      <dd>
        <%= @the_position.whose_turn %>
      </dd>

      <dt>
        Notes
      </dt>
      <dd>
        <%= @the_position.notes %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_position.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_position.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit position
    </h2>

    <form action="/modify_position/<%= @the_position.id %>"  method="post" >
      <div>
        <label for="board_state_box">
          Board state
        </label>

        <textarea id="board_state_box" name="query_board_state"><%= @the_position.board_state %></textarea>
      </div>

      <div>
        <label for="best_move_box">
          Best move
        </label>

        <input type="text" id="best_move_box" name="query_best_move" value="<%= @the_position.best_move %>">
      </div>

      <div>
        <label for="evaluation_box">
          Evaluation
        </label>

        <input type="text" id="evaluation_box" name="query_evaluation" value="<%= @the_position.evaluation %>">
      </div>

      <div>
        <input type="checkbox" id="whose_turn_box" name="query_whose_turn" value="1" <%= "checked" if @the_position.whose_turn %>>

        <label for="whose_turn_box">
            Whose turn
        </label>
      </div>

      <div>
        <label for="notes_box">
          Notes
        </label>

        <input type="text" id="notes_box" name="query_notes" value="<%= @the_position.notes %>">
      </div>

      <button>
        Update position
      </button>
    </form>
  </div>
</div>

<hr>
